<!DOCTYPE html>
<html lang="en">

<head>
    <% include ./partials/head.ejs %>
</head>

<body class="container">
    <% include ./partials/navBar.ejs %>

    <div class="jumbotron">
        <h3>New Chore for
            <%= group.name %>
        </h3>
        <p>Please fill out the form below to create a new chore for <%= group.name %>.</p>
    </div>

    <form action="/groups/<%= group.id %>/chores/new" method="post">
        <div class="form-group">
            <label for="inputName">Name</label>
            <input id="inputName" class="form-control" name="name" type="text" placeholder="Chore name">
        </div>
        <div class="form-group">
            <label for="inputAssignee">Assignee</label>
            <input id="inputAssignee" class="form-control" name="assignee" type="text" placeholder="Assignee name">
        </div>
        <div class="form-check mb-3">
            <input id="inputStatus" class="form-check-input" type="checkbox" name="status" value="true">
            <label class="form-check-label" for="inputStatus">
                Completed?
            </label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="reset" class="btn btn-danger">Reset</button>
    </form>

    <% include ./partials/scripts.ejs %>
</body>

</html>